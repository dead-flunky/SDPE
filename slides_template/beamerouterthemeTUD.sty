\newcommand{\TUD@rules}{%
  \mbox{%
    \color{largerulecolor}\rule{\TUD@rulelength}{0.017\paperwidth}%
    \hspace{-\TUD@rulelength}%
    \color{smallrulecolor}\rule[-0.009\paperwidth]{\TUD@rulelength}{0.002\paperwidth}%
  }%
}

