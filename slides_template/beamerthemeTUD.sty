\RequirePackage{keyval}[1997/11/10]
% usage: \ProcessOptionsTUD
\def\TUD@beamer@ProcessOptions{%
  \let\TUD@beamer@origkverr\KV@err%
%  \let\KV@errx=\@gobble% never mind
  \let\@tempa\@empty
  \ifx\@currext\@clsextension%
  \else
  \@for\CurrentOption:=\@classoptionslist\do{%
    \@ifundefined{KV@\@currname @\CurrentOption}%
    {}{\edef\@tempa{\@tempa,\CurrentOption,}}}%
  \fi
  \edef\@tempa{%
    \noexpand\setkeys{\@currname}{\@tempa\@ptionlist{\@currname.\@currext}}}%
  \ifx\@currext\@clsextension\let\KV@errx=\@gobble\fi% never mind
  \@tempa%
  \let\KV@err\TUD@beamer@origkverr%
  \AtEndOfPackage{\let\@unprocessedoptions\relax}}

% usage: \DeclareOptionTUD{<option>}[<default-value>]{<definition>}
% value value available as #1 (e.g. for accentcolor=tud3b)
\def\TUD@beamer@DeclareOption#1{\@ifnextchar[{\TUD@beamer@dokv{#1}}{\TUD@beamer@dokv{#1}[]}}
\long\def\TUD@beamer@dokv#1[#2]#3{\define@key{\@currname}{#1}[#2]{#3}}

% Verarbeitung der Optionen
  \PassOptionsToPackage{accentcolor=tud1b}{tudcolours}
  \TUD@beamer@DeclareOption{accentcolor}{%
    \PassOptionsToPackage{accentcolor=#1}{tudcolours}}
  \TUD@beamer@DeclareOption{colorback}{%
    \PassOptionsToPackage{colorback}{beamercolorthemeTUD}}
  \TUD@beamer@DeclareOption{colorbacktitle}{%
    \PassOptionsToPackage{colorbacktitle}{beamercolorthemeTUD}}
  \TUD@beamer@DeclareOption{inverttitle}{%
    \PassOptionsToPackage{inverttitle}{beamercolorthemeTUD}}
  \TUD@beamer@DeclareOption{inverttitlerule}{%
    \PassOptionsToPackage{inverttitlerule}{beamercolorthemeTUD}}
  \TUD@beamer@DeclareOption{invertrule}{%
    \PassOptionsToPackage{invertrule}{beamercolorthemeTUD}}
  \TUD@beamer@DeclareOption{blackrule}{%
    \PassOptionsToPackage{blackrule}{beamercolorthemeTUD}}
\TUD@beamer@ProcessOptions

